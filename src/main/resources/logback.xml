<configuration>

    <!-- Definirea unui appender pentru consola -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Definirea unui logger care trimite loguri de nivel ERROR È™i mai sus la consola -->
    <logger name="com.example.demo" level="error">
        <appender-ref ref="console"/>
    </logger>

    <!-- Definirea unui root logger care va gestiona toate logurile -->
    <root level="info">
        <appender-ref ref="console"/>
    </root>

</configuration>
